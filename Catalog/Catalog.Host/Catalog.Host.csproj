    <ImplicitUsings>enable</ImplicitUsings>
    <UserSecretsId>bda81bcf-b5c1-4f9b-bc70-0c96ef53811c</UserSecretsId>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
    <DockerfileContext>..\..</DockerfileContext>
